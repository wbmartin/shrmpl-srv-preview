#!/bin/bash

set -e

CONFIG_FILE=/Users/brandon/Code/shrmpl-srv-preview/etc/shrmpl-vault-srv-loc.env

echo "Building shrmpl-vault-srv for development (macOS)..."

cargo build --bin shrmpl-vault-srv

echo "Launching shrmpl-vault-srv with config $CONFIG_FILE..."

./target/debug/shrmpl-vault-srv $CONFIG_FILE
